<?xml version="1.0" encoding="utf-8"?>
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  xmlns:uap5="http://schemas.microsoft.com/appx/manifest/uap/windows10/5"
  xmlns:desktop="http://schemas.microsoft.com/appx/manifest/desktop/windows10"
  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities"
  IgnorableNamespaces="uap uap5 desktop rescap">

  <Identity
    Name="EFMapOverlayHelper"
    Publisher="CN=EF Map Project Test Certificate"
    Version="0.1.0.0" />

  <Properties>
    <DisplayName>EF Map Overlay Helper</DisplayName>
    <PublisherDisplayName>EF Map Project</PublisherDisplayName>
    <Logo>Assets\StoreLogo.png</Logo>
    <Description>Helper application for EF Map overlay integration with EVE Frontier</Description>
  </Properties>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.19041.0" MaxVersionTested="10.0.22621.0" />
  </Dependencies>

  <Resources>
    <Resource Language="en-us"/>
  </Resources>

  <Applications>
    <Application Id="EFMapOverlayHelper" Executable="ef-overlay-tray.exe" EntryPoint="Windows.FullTrustApplication">
      <uap:VisualElements
        DisplayName="EF Map Overlay Helper"
        Description="Helper application for EF Map overlay integration"
        BackgroundColor="transparent"
        Square150x150Logo="Assets\Square150x150Logo.png"
        Square44x44Logo="Assets\Square44x44Logo.png">
        <uap:DefaultTile Wide310x150Logo="Assets\Wide310x150Logo.png" />
      </uap:VisualElements>

      <Extensions>
        <!-- Protocol handler for ef-overlay:// URLs -->
        <uap:Extension Category="windows.protocol">
          <uap:Protocol Name="ef-overlay">
            <uap:DisplayName>EF Map Overlay Protocol</uap:DisplayName>
          </uap:Protocol>
        </uap:Extension>

        <!-- Startup task (user-controllable) -->
        <desktop:Extension Category="windows.startupTask" Executable="ef-overlay-tray.exe" EntryPoint="Windows.FullTrustApplication">
          <desktop:StartupTask TaskId="EFMapHelperStartup" Enabled="false" DisplayName="EF Map Overlay Helper" />
        </desktop:Extension>
      </Extensions>
    </Application>
  </Applications>

  <Capabilities>
    <rescap:Capability Name="runFullTrust" />
  </Capabilities>
</Package>
